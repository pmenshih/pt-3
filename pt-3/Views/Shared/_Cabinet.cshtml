
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Личный кабинет";
    var org = psychoTest.Models.Organisations.Organisation.GetByManager(User);
}

<div style="background-color: #e2e2e2;">
    <p>Меню личного кабинета</p>
    <!-- #1 код генерации пунктов меню в зависимости от ролей пользователя -->
        @if (org != null)
        {
            <a href="/organisation?id=@org.id">Организация</a>
        }
        @if (psychoTest.Core.Membership.isAdmin(User))
        {
            <a href="/manage/search">Поиск</a>
        }
    <!-- #1 конец блока -->
</div>

@RenderBody()

